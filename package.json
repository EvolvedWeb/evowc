{
  "name": "evowc",
  "version": "0.3.0",
  "description": "Evo-WC transpiler converts a template file based on HTML and XML into a raw JS custom Web Component.",
  "main": "index.js",
  "bin": {
    "evowc": "bin/evowc.js"
  },
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "node ./bin/evowc.js \"components/*.html\"",
    "build1": "node --stack_size=1200 --inspect-brk ./bin/evowc.js \"components/SpecialThingElement.html\"",
    "build2": "node ./bin/evowc.js \"components/MiniMumElement.html\"",
    "start": "node app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intervalia/evowc.git"
  },
  "author": "Michael Collins <intervalia@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/intervalia/evowc/issues"
  },
  "homepage": "https://github.com/intervalia/evowc#readme",
  "dependencies": {
    "express": "4.18.2",
    "fast-xml-parser": "4.2.2",
    "glob": "10.2.6",
    "html-minifier-terser": "7.2.0"
  }
}
